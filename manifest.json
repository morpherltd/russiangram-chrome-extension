{
  "manifest_version": 3,
  "name": "RussianGram",
  "description": "Adds stress marks to Russian websites",
  "version": "1.4.1",
  "icons": {
    "128": "icon/icon.png",
    "16": "icon/icon.png",
    "48": "icon/icon.png"
  },
  "action": {
    "default_icon": {
      "19": "icon/icon.png",
      "38": "icon/icon.png"
    },
    "default_popup": "html/popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": ["css/popover.css"],
      "js": [
        "js/config.js",
        "js/jquery.min.js",
        "js/popper.min.js",
        "js/content.js",
        "js/wholepage.js"
      ],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "background": {
    "service_worker": "js/context-menu.js"
  },
  "incognito": "spanning",
  "content_security_policy": {
    "script-src": "self",
    "object-src": "self"
  },
  "permissions": [
    "contextMenus",
    "activeTab"
  ],
  "host_permissions": [
    "https://api.russiangram.com/*",
    "https://russiangram.com/*"
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "html/*",
        "css/*",
        "js/*",
        "fonts/*"
      ],
      "matches": [],
      "extension_ids": []
    }
  ]
}
